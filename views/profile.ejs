<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>O.W.L DATA</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
    <link rel="icon" type="image/png" href="/assets/logo.png" />
    
</head>
<body>
<div class="min-h-screen bg-gray-900 flex justify-center items-center">
    <div class="bg-white p-8 rounded-lg shadow-md w-full max-w-md">
        <h1 class="text-3xl mb-6 flex items-center justify-center"><span class="fa fa-sign-in mr-2"></span> Data Service</h1>

        <% if (message && message.length > 0) { %>
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
                <strong class="font-bold">Error!</strong>
                <span class="block sm:inline"><%= message %></span>
            </div>
        <% } %>
        
        <!-- FORM -->
        <form action="/id/<%= user_id %>/<%= username %>" method="post">
            <div class="mb-4">
                <input hidden type="text" value="<%= user_id %>" id="user_id" name="user_id" disabled class="appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" required>
            </div>
            <div class="mb-4">
                <label class="block text-gray-700 text-sm font-bold mb-2" for="username">Username</label>
                <input type="text" value="<%= username %>" id="username" name="username" disabled class="appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" required>
            </div>
            <div class="mb-4">
                <label class="block text-gray-700 text-sm font-bold mb-2" for="email">Select Email</label>
                <select id="email" name="email" class="appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" required>
                    <option value="">Select Email</option>
                    <% for (const email of user.emails) { %>
                        <option value="<%= email.email %>" <%= email.primary ? 'selected' : '' %>>
                            <%= email.email %>
                        </option>
                    <% } %>
                </select>
            </div>
            <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded-md focus:outline-none focus:shadow-outline">Continue</button>
        </form>

        <hr class="my-6">

        <p class="text-gray-700">&copy; <script>document.write(new Date().getFullYear())</script> is-a.dev & Open Domains</p>
    </div>
</div>
</body>
</html>
